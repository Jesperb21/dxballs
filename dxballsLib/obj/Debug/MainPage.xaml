<Page
    x:Class="dxballsLib.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:dxballsLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ControlTemplate x:Key="ballTemplate" TargetType="ContentControl">
            <Grid>
                <Ellipse Fill="#FFF4F4F5" Height="10" Margin="0,0,0,0" Stroke="Black" Width="10"/>
            </Grid>
        </ControlTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,2,0,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="343*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="playArea" Grid.Row="1" Background="#FF343434"/>
        <Button x:ConnectionId='1' Content="Button" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top"                     />
        <Button x:ConnectionId='2' Content="Button" HorizontalAlignment="Left" Margin="276,10,0,0" VerticalAlignment="Top"                       />

    </Grid>
</Page>

